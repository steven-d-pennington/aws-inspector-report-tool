# AWS Inspector Report Tool - Environment Configuration
# Copy this file to .env and update with your values

# Application Settings
NODE_ENV=development
PORT=3000
HOST=0.0.0.0
LOG_LEVEL=info

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=vulnerability_dashboard
DB_USER=appuser
DB_PASSWORD=your_secure_password_here
DB_SSL_MODE=disable
DB_POOL_MIN=2
DB_POOL_MAX=20

# Container Settings
CONTAINER_NAME=aws-inspector-app
POSTGRES_CONTAINER_NAME=aws-inspector-db

# Volume Names
DATA_VOLUME=postgres_data
UPLOADS_VOLUME=app_uploads
BACKUP_VOLUME=db_backups

# Health Check Settings
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3
HEALTH_CHECK_START_PERIOD=60

# Memory Limits (in MB)
APP_MEMORY_LIMIT=1024
DB_MEMORY_LIMIT=512

# Development Settings
ENABLE_HOT_RELOAD=true
DEBUG_MODE=false

# Production Settings (uncomment for production)
# NODE_ENV=production
# DB_SSL_MODE=require
# LOG_LEVEL=warn
# ENABLE_HOT_RELOAD=false