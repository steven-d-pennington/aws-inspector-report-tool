{
  "name": "vulnerability-dashboard",
  "version": "1.0.0",
  "description": "AWS Inspector Vulnerability Report Dashboard",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "mocha tests/**/*.js --timeout 10000",
    "test:contract": "mocha tests/contract/**/*.js --timeout 10000",
    "test:watch": "mocha tests/**/*.js --timeout 10000 --watch"
  },
  "dependencies": {
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "marked": "^11.0.0",
    "multer": "^1.4.5-lts.1",
    "puppeteer": "^21.0.0",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "chai": "^6.0.1",
    "mocha": "^11.7.2",
    "nodemon": "^3.0.2",
    "supertest": "^7.1.4"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": ["**/tests/**/*.test.js", "**/tests/**/*.spec.js"],
    "collectCoverageFrom": [
      "src/**/*.js",
      "server.js",
      "!node_modules/**"
    ]
  }
}