<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vulnerability Dashboard - Upload</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav class="navbar">
        <div class="container">
            <h1>AWS Inspector Vulnerability Dashboard</h1>
            <div class="nav-content">
                <ul class="nav-links">
                    <li><a href="/" class="active">Upload</a></li>
                    <li><a href="/dashboard">Dashboard</a></li>
                    <li><a href="/vulnerabilities">Vulnerabilities</a></li>
                    <li><a href="/fixed-vulnerabilities">Fixed Vulnerabilities</a></li>
                    <% if (process.env.ADMIN_ENABLED === 'true') { %>
                    <li><a href="/settings">Settings</a></li>
                    <% } %>
                </ul>
                <div class="nav-filter">
                    <label for="accountFilter">AWS Account:</label>
                    <select id="accountFilter" onchange="filterByAccount(this.value)">
                        <option value="">All Accounts</option>
                        <% if (typeof filterOptions !== 'undefined' && filterOptions.awsAccountIds) { %>
                            <% filterOptions.awsAccountIds.forEach(accountId => { %>
                                <option value="<%= accountId %>" <%= selectedAccountId === accountId ? 'selected' : '' %>>
                                    <%= accountId %>
                                </option>
                            <% }) %>
                        <% } %>
                    </select>
                </div>
            </div>
        </div>
    </nav>

    <div class="container">
        <div class="upload-section">
            <h2>Upload Vulnerability Report</h2>
            <div class="upload-area" id="uploadArea">
                <div class="upload-icon">üìÅ</div>
                <p>Drag and drop one or more AWS Inspector reports here or click to browse</p>
                <p class="upload-formats">Files must be named MM-DD-YYYY.json or MM-DD-YYYY.csv</p>
                <input type="file" id="fileInput" accept=".json,.csv" multiple style="display: none;">
                <button class="btn btn-primary" onclick="document.getElementById('fileInput').click()">
                    Choose Files
                </button>
            </div>

            <div id="fileInfo" class="file-info" style="display: none;">
                <h3>Selected Files</h3>
                <p class="file-info-note">Report dates are automatically derived from each filename.</p>
                <div id="selectedFilesList"></div>
                <div class="file-info-actions">
                    <button class="btn btn-success" onclick="uploadFile()">Upload Files</button>
                    <button class="btn btn-secondary" onclick="clearFiles()">Clear All</button>
                </div>
            </div>

            <div id="uploadProgress" class="progress" style="display: none;">
                <div class="progress-bar" id="progressBar"></div>
                <p id="progressText">Uploading...</p>
            </div>

            <div id="uploadResult" class="result" style="display: none;">
                <h3 id="resultTitle"></h3>
                <p id="resultMessage"></p>
                <div id="resultDetails"></div>
                <button class="btn btn-primary" onclick="location.href='/dashboard'">View Dashboard</button>
                <button class="btn btn-secondary" onclick="resetUpload()">Upload More</button>
            </div>
        </div>

        <div class="recent-reports">
            <h2>Recent Reports</h2>
            <div id="recentReportsList">Loading...</div>
        </div>
    </div>

    <script src="/js/navigation.js"></script>
    <script src="/js/upload.js"></script>
</body>
</html>